{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests"
  ],
   
   "enabledManagers": [
    "docker-compose",
    "github-actions",
    "pip_requirements",
    "pep621"
  ],

   "schedule": [
    "before 4am"
  ],

  "pip_requirements": {
    "fileMatch": [
      "(^|/)([\\w-]*)requirements[-\\w]*\\.(txt|pip)$",
      "\\.github\\/actions\\/[\\w-]+\\/[\\w-]+\\.sh"
    ]
  }
}
